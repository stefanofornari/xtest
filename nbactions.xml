<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-quick build</actionName>
        <displayName>quick build</displayName>
        <goals>
            <goal>install</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-release:prepare</actionName>
        <displayName>release:prepare</displayName>
        <goals>
            <goal>release:prepare</goal>
        </goals>
        <properties>
            <preparationGoals>install</preparationGoals>
            <arguments>-DskipTests</arguments>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-release:perform</actionName>
        <displayName>release:perform</displayName>
        <goals>
            <goal>release:perform</goal>
        </goals>
        <properties>
            <goals>install</goals>
            <arguments>-DskipTests</arguments>
        </properties>
    </action>
    <action>
            <actionName>CUSTOM-WebFiddle</actionName>
            <displayName>WebFiddle</displayName>
            <goals>
                <goal>javafx:run</goal>
            </goals>
            <properties>
                <mainClass>ste.xtest.web.WebFiddle</mainClass>
            </properties>
        </action>
</actions>
